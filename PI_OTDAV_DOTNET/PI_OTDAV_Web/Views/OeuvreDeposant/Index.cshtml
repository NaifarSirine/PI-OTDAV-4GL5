@model IEnumerable<PI_OTDAV_Domain.Entities.oeuvredeposant>

@{
    ViewBag.Title = "Index";
   
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.date_dep)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.etat_depot)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.titre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.date_dep)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.etat_depot)
        </td>
        <td>
            @{string path = "~/Content/Upload/" + @item.image;}
            @*enlever label for pour afficher seulement l'image*@
            <img src="@Url.Content(path)" width="50" height="50" />
        </td>
         
        <td>
            @Html.DisplayFor(modelItem => item.titre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id },new { @class = "btn btn-secondary btn-pill m-1" }) 
            @Html.ActionLink("Details", "Details", new { id = item.id },new { @class = "btn btn-secondary btn-pill m-1" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.id },new { @class = "btn btn-secondary btn-pill m-1" }) 
        </td>
    </tr>
}

</table>
