@model IEnumerable<PI_OTDAV_Domain.Entities.oeuvredeclaration>

@{
    ViewBag.Title = "DispalyAccepterArtWorkByUser";

}
<div class="layer-stretch">
    <div class="layer-wrapper text-center">
        <div class="layer-ttl"><h4>Vos oeuvres <span class="text-primary">protégés</span> par l'OTDAV</h4></div>
    </div>
</div>
<center><b>Nombre de vos oeuvres acceptés: </b><span class="badge badge-success badge-sm"><b>@ViewBag.count3</b></span></center>
<br /><br />
<div class="col-12">
    <div class="panel panel-default">
        <div class="panel-head">
            <div class="panel-title">Liste des oeuvres</div>
        </div>
        <div class="panel-wrapper">
            <div class="panel-body">
                <center>
                    <table id="example" class="table-striped" width="1400" border="1">
                        <thead>
                            <tr>
                                <th>
                                    <center><b class="glyphicon-text-height">@Html.DisplayNameFor(model => model.Titre)</b></center>
                                </th>
                                <th>
                                    <center><b class="glyphicon-text-height">@Html.DisplayNameFor(model => model.Description)</b></center>
                                </th>
                                <th>
                                    <center><b class="glyphicon-text-height"> @Html.DisplayNameFor(model => model.Categorie)</b></center>
                                </th>

                                <th>
                                    <center><b class="glyphicon-text-height">@Html.DisplayNameFor(model => model.DateInitial)</b></center>
                                </th>
                                <th>
                                    <center><b class="glyphicon-text-height">@Html.DisplayNameFor(model => model.Deadline)</b></center>
                                </th>

                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <center> <b class="glyphicon-text-height">@item.Titre</b></center>
                                    </td>


                                    <td>
                                        <center><b class="glyphicon-text-height"> @item.Description</b></center>
                                    </td>


                                    <td>
                                        <center> <b class="glyphicon-text-height"> @item.Categorie</b></center>
                                    </td>

                                    <td>
                                        <center> <b class="glyphicon-text-height"> @item.DateInitial.Value.ToString("dd-MM-yyyy")</b></center>
                                    </td>
                                    <td>
                                        <center> <b class="glyphicon-text-height"> @item.Deadline.Value.ToString("dd-MM-yyyy")</b></center>
                                    </td>


                                    <td class="panel-body">
                                        <center>
                                                <button class="btn btn-danger btn-toggle btn-pill">
                                                    @Html.ActionLink("Supprimer", "SupprimerOeuvreDeclarerAccepter", "oeuvredeclaration", new { id = item.id }, new { @class = "" })
                                                </button>
                                            </center>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <br /><br />
                    <center>
                        <div class="btn btn-outline btn-primary btn-pill btn-outline-1x m-1">
                            <div class="container">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                    @Html.ActionLink("Statistique sur l'etat de vos oeuvres", "ColumnWithRotatedLabels", "statod", new { area = "" }, new { @class = "navbar-brand" })
                                    <i class="far fa-chart-bar"></i>


                                </div>
                            </div>
                        </div>
                    </center>
                    <br /><br />

                </center>
            </div>
        </div>
    </div>
</div>
<br /><br /><br /><br /><br /><br /><br /><br />

<script type="text/javascript">
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
<br /><br />




